<h2><%= t("moderation.action_plans.index.title") %></h2>

<div class="row">
  <div class="small-8 column">
    <%= render "shared/search_form",
               search_path: moderation_action_plans_path(page: 1),
               i18n_namespace: "moderation.action_plans.index.search_form" %>
  </div>
  <div class="small-4 column">
    <%= link_to t("action_plans.index.new"), new_moderation_action_plan_path, class: 'button radius expand' %>
  </div>
</div>

<table class="clear">
  <tr>
    <th>
      <%= t("moderation.action_plans.index.headers.action") %>
    </th>
  </tr>
  <% @resources.each do |action| %>
    <tr id="<%= dom_id(action) %>">
      <td>
        <%= link_to action.title, edit_moderation_action_plan_path(action) %>
        <div class="action-description">
          <%= action.description %>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @resources %>
