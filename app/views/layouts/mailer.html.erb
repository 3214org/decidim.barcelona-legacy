<%= stylesheet_link_tag :email %>

<div id="email-layout">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td style="text-align: center;">
        <table class="main">
          <tbody>
            <tr>
              <td class="header" background="<%= attachments['header.jpg'].url %>">
                <div class="application-title-wrapper">
                  <h1 class="application-title">
                    <%= link_to root_url do %>
                      <%= image_tag attachments['logo.png'].url %>
                    <% end %>
                  </h1>
                </div>
              </td>
            </tr>
            <tr>
              <td class="email-content">
                <div class="email-content-inner">
                  <%= yield %>
                </div>
              </td>
            </tr>
            <tr>
              <td class="footer">
                <% unless @hide_footer_link %>
                  <p>
                    <%= t("mailers.config.manage_email_subscriptions") %> <%= link_to t("account.show.title"), account_url %>
                  </p>
                <% end %>
                <p><%= Setting['org_name'] %></p>
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </table>
</div>
