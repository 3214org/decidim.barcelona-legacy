<% if @residence.errors[:residency].present? %>

  <div id="error_explanation" data-alert class="alert-box alert radius">
  	<a href="#" class="close" title="<%= t("application.close") %>">&times;</a>
    <%= t("verification.residence.new.error_verifying_census",
    offices: link_to( t("verification.residence.new.error_verifying_census_offices"),
    "http://ajuntament.barcelona.cat/ca/canals-comunicacio-ciutadana/presencials/oac", target: "_blank")).html_safe %>
  </div>

<% else %>
  <%= render "shared/errors",
             resource: @residence,
             message: t("verification.residence.new.form_errors")  %>
<% end %>
