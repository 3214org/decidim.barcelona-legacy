<html>
  <head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,300' rel='stylesheet' type='text/css'>
    <style>
     <%= render template: 'revision/action_plan_reports/normalize.css' %>
    </style>
    <style>

     html, body{
         font-family: "Source Sans Pro";
     }
     body{
         margin: 0.8in;
         font-size: 18px;
     }
     h1, h2, h3, h4{
         margin-top: 0.5em;
         margin-bottom: 0.2em;
     }
     h1{
         font-size: 36pt;
         color: #dc2300;
     }
     h2{
         font-size: 32pt;
     }

     h3{
         font-size: 22pt;
     }
     h4{
         font-size: 18pt;
     }

     .item-content{
         margin-left: 65px;
         margin-bottom: 2em;
         margin-top: 1em;
      }

     .item-meta{
         padding: 0.5em;
         padding-left: 0;
         padding-right: 0;
         margin-top: 2em;
         font-size: 0.7em;
         border: 2px solid #ccc;
         border-left: none;
         border-right: none;
         color: #666;
     }

     .item-meta p{
         margin: 0;
         margin-before: 0;
         margin-after: 0;
         padding: 0;
     }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <%= render partial: 'revision/action_plan_reports/report/action_plans', locals: { action_plans: action_plans } %>
  </body>
</html>
