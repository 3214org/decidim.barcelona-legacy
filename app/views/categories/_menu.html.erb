<ul class="clear">
  <% categories.each do |category| %>
    <li>
      <%= link_to category.name, anchor: dom_id(category) %>
      <ul>
        <% category.subcategories.each do |subcategory| %>
          <li>
            <%= link_to subcategory.name, anchor: dom_id(subcategory) %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
