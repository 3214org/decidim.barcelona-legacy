<li class="proposal-featured featured-proposal" id="<%= dom_id(proposal, "featured") %>">
  <div class="featured-proposal-inner">
    <div class="featured-proposal-content">
      <h3><%= link_to truncate(proposal.title, length: 90), proposal %></h3>
      <div class="info">
        <% if proposal.author.hidden? || proposal.author.erased? %>
          <%= t("proposals.show.author_deleted") %>
        <% else %>
          <% unless proposal.official? || proposal.from_meeting? %>
            <%= proposal.author.name %>
          <% end %>
        <% end %>
        &nbsp;&bull;&nbsp;
        <strong><%= t("proposals.proposal.supports", count: proposal.total_votes) %></strong>
      </div>
    </div>

    <div id="<%= dom_id(proposal, "featured") %>_votes">
      <%= render 'featured_votes', proposal: proposal %>
    </div>
  </div>
</li>
