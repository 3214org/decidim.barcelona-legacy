<div class="row">
  <section class="section-home-header">
    <div class="home-title">
      <h3><%= t ".title" %></h3>
      <h4><%= t ".subtitle", proposals: number_with_delimiter(Proposal.count), accepted_proposals: number_with_delimiter(statistics[:included_proposals]), action_plans: number_with_delimiter(ActionPlan.count) %></h4>
    </div>
    <div class="header-grid">
      <div class="explanation small-12 large-6 columns">
        <%= link_to dataviz_path('action_plans'), class: "cell big explore" do %><span><%= t ".links.explore" %> <%= bcn_icon "dit_assenyala" %></span><% end %>
      </div>
      <div class="sections small-12 large-6 columns">
        <%= link_to action_plans_path(participatory_process_id: @participatory_process.slug), class: "cell big action_plans" do %><span><%= t ".links.action_plans" %> <%= bcn_icon "dit_assenyala" %></span><% end %>
      </div>
    </div>
  </section>
</div>
